# Activamos el modo de reescritura de URLs.
RewriteEngine On
# Indicamos el directorio raíz del proyecto.
RewriteBase /bloc_php_mvc
# Las 3 líneas siguientes se encargan de no pasar al parámetro
url los directorios y ficheros externos requeridos.
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-l
# Lee de la url los parámetros y pasa al index.php una variable
llamada url con el contenido mediante el método GET.
RewriteRule ^(.*)$ index.php?url=$1 [L,QSA]
<?php
 if(isset($_GET['url'])){
 $url = $_GET['url']; // 'posts/index'
 // Quita / innecesarias a la derecha.
 $url = rtrim($url, '/');

 // Devuelve un array utilizando la / como delimitador.
 $url = explode('/', $url); // ['posts', 'index']
define('URL', 'http://localhost/bloc_php_mvc/');
<a href='<?php echo constant('URL'); ?>'>Home</a>
<a href='<?php echo constant('URL'); ?>posts/index'>Posts</a>